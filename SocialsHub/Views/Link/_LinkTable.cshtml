@model SocialsHub.Core.ViewModels.LinkViewModel

<form action="/Link/Links" id="addLink" style="margin-left: 250px; width:50%;">
    @Html.ValidationSummary()

    <p class="alert alert-info mt-4 mb-4">Pole Url jest <strong>wymagane</strong>.</p>

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Link.Id)
    @Html.HiddenFor(x => x.Link.UserId)

    @Html.LabelFor(x => x.Link.Name)
    @Html.TextBoxFor(x => x.Link.Name, new { @class = "form-control", autofocus = "autofocus" })
    @Html.ValidationMessageFor(x => x.Link.Name)

    @Html.LabelFor(x => x.Link.Url)
    @Html.TextBoxFor(x => x.Link.Url, new { @class = "form-control", autofocus = "autofocus" })
    @Html.ValidationMessageFor(x => x.Link.Url)


    <button class="btn btn-primary mt-3" type="submit">ADD NEW LINK</button>
</form>